<h1>Liste de tout nos livres</h1>
<br>
<% @les_livres.each do |un_livre| %>
  <p><a href="/list_books/<%= un_livre.id %>"><%= un_livre.title %></a></p>
<% end %>

<%= form_tag "/list_books", method: "post" do %>
  <input type="text" name="title" />
  <input type="submit" value="Ajouter le livre" />
<% end %>


